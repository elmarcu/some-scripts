#!/bin/bash
cd $WORKSPACE
for d in * ; do
  cd $WORKSPACE/$d
  for sd in * ; do
    cd $WORKSPACE/$d/$sd
    BRANCH=$(git rev-parse --abbrev-ref HEAD)
    echo "checking $sd at: $BRANCH"
    if [ "master" == "$BRANCH" ] || [ "main" == "$BRANCH" ]; then
        echo "updating $sd"
        git remote prune origin && git pull
    fi
    echo ""
  done;
done;
