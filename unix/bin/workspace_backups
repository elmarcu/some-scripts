#!/bin/sh
GIT_BACKUPS_EXCLUDES="--exclude node_modules --exclude images --exclude imagenes --exclude example --exclude .git --exclude assets --exclude theme --exclude ingest"
GIT_BACKUPS_DESTINATION=$HOME/backups

cd $WORKSPACE
for d in * ; do
  cd $WORKSPACE/$d
  mkdir -p $GIT_BACKUPS_DESTINATION/$d
  for sd in * ; do
    echo "backing up $sd"
    tar $GIT_BACKUPS_EXCLUDES -zcf "$GIT_BACKUPS_DESTINATION/$d/$sd.tar.gz" $sd;
    echo ""
  done;
done;
