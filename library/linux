#kill process by id find by name
ps aux | grep 'PROCESS' | awk '{print $2}' | xargs kill -9
killall PROCESS

#pause a process
ps aux | grep '[PROGRAM]' | awk '{print $2}' | head -n 1 | xargs kill -STOP
#resume a process
ps aux | grep '[PROGRAM]' | grep Tsl | awk '{print $2}' | xargs kill -CONT
