#!/bin/bash
#List old QA/STG remote tags. older than 1 month
git for-each-ref --sort=taggerdate --format '%(refname:short) %(taggerdate:short)' refs/tags | egrep "(-rc|-beta)" | egrep -v "($(date +%Y-%m)|$(date -v-1m +%Y-%m))"

if [ "purge" == "$1" ]; then

  git tag -l | xargs git tag -d && git fetch
  #delete old tags
  git for-each-ref --sort=taggerdate --format '%(refname:short) %(taggerdate:short)' refs/tags | egrep "(-rc|-beta)" | egrep -v "($(date +%Y-%m)|$(date -v-1m +%Y-%m))" | awk '{print $1}' | xargs -n 1 git push --no-verify --delete origin
  git tag -l | xargs git tag -d && git fetch
fi
